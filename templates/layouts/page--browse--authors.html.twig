{#
/**
 * @file
 * Template for the browse authors page.
 */
#}
{% extends 'page.html.twig' %}
{% block content %}
	{% if page.content %}
		<div class="page__content">
			{# Place the search form block #}
                {{ drupal_block('views_exposed_filter_block:browse_authors-browse_authors') }}

            {# Render the list of authors #}
                <div class="browse">
                    {{ drupal_view('browse_authors', 'browse_authors') }}
                </div>
		</div>
	{% endif %}
{% endblock %}